<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Make a Donation | NGO Connect</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4F46E5;
      --primary-light: #6366F1;
      --secondary: #4338CA;
      --accent: #EC4899;
      --success: #10B981;
      --dark: #1F2937;
      --light: #F9FAFB;
      --gray: #6B7280;
      --light-gray: #E5E7EB;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }
    
    body {
      background-color: #F8FAFF;
      color: var(--dark);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    /* Header Styles */
    .header {
      background: white;
      padding: 20px 40px;
      box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }
    
    .logo-icon {
      width: 40px;
      height: 40px;
      background: var(--primary);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.2rem;
    }
    
    .logo-text {
      font-size: 1.4rem;
      font-weight: 700;
      background: linear-gradient(to right, var(--primary), var(--accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .back-link {
      color: var(--gray);
      text-decoration: none;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
    }
    
    .back-link:hover {
      color: var(--primary);
    }
    
    /* Main Content */
    .donation-container {
      max-width: 600px;
      margin: 40px auto;
      padding: 0 30px;
      flex: 1;
    }
    
    .donation-header {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .donation-title {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 15px;
      position: relative;
      display: inline-block;
    }
    
    .donation-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 4px;
      background: var(--primary);
      border-radius: 2px;
    }
    
    .donation-subtitle {
      color: var(--gray);
      font-size: 1.1rem;
      max-width: 500px;
      margin: 0 auto;
    }
    
    /* Donation Card */
    .donation-card {
      background: white;
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    
    /* Amount Selection */
    .amount-section {
      margin-bottom: 30px;
    }
    
    .section-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .section-title i {
      color: var(--primary);
    }
    
    .amount-options {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
      margin-bottom: 20px;
    }
    
    .amount-option {
      position: relative;
    }
    
    .amount-option input {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }
    
    .amount-option label {
      display: block;
      padding: 15px;
      background: white;
      border: 2px solid var(--light-gray);
      border-radius: 8px;
      text-align: center;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .amount-option input:checked + label {
      border-color: var(--primary);
      background: rgba(79, 70, 229, 0.05);
      color: var(--primary);
    }
    
    .amount-option label:hover {
      border-color: var(--primary-light);
    }
    
    .custom-amount {
      position: relative;
    }
    
    .custom-amount .currency {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      font-weight: 500;
      color: var(--gray);
    }
    
    .custom-amount input {
      width: 100%;
      padding: 15px 15px 15px 35px;
      border: 2px solid var(--light-gray);
      border-radius: 8px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .custom-amount input:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
      outline: none;
    }
    
    /* Payment Method */
    .payment-section {
      margin-bottom: 30px;
    }
    
    .payment-options {
      display: flex;
      gap: 15px;
      margin-bottom: 20px;
    }
    
    .payment-option {
      flex: 1;
      position: relative;
    }
    
    .payment-option input {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }
    
    .payment-option label {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
      padding: 15px;
      background: white;
      border: 2px solid var(--light-gray);
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .payment-option input:checked + label {
      border-color: var(--primary);
      background: rgba(79, 70, 229, 0.05);
    }
    
    .payment-option label:hover {
      border-color: var(--primary-light);
    }
    
    .payment-icon {
      font-size: 1.5rem;
      color: var(--gray);
    }
    
    .payment-option input:checked + label .payment-icon {
      color: var(--primary);
    }
    
    /* Donor Info */
    .info-section {
      margin-bottom: 30px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
    }
    
    .form-control {
      width: 100%;
      padding: 15px;
      border: 2px solid var(--light-gray);
      border-radius: 8px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .form-control:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
      outline: none;
    }
    
    /* Form Actions */
    .form-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .btn {
      padding: 15px 30px;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      border: none;
      text-decoration: none;
    }
    
    .btn-primary {
      background: var(--primary);
      color: white;
    }
    
    .btn-primary:hover {
      background: var(--secondary);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(79, 70, 229, 0.3);
    }
    
    .btn-outline {
      background: transparent;
      border: 1px solid var(--light-gray);
      color: var(--gray);
    }
    
    .btn-outline:hover {
      border-color: var(--primary);
      color: var(--primary);
    }
    
    /* Impact Message */
    .impact-message {
      background: rgba(16, 185, 129, 0.1);
      border-left: 4px solid var(--success);
      padding: 15px;
      border-radius: 0 8px 8px 0;
      margin-top: 30px;
      display: flex;
      gap: 15px;
    }
    
    .impact-icon {
      color: var(--success);
      font-size: 1.2rem;
    }
    
    .impact-text {
      font-size: 0.95rem;
      color: var(--dark);
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        gap: 15px;
        padding: 15px 20px;
      }
      
      .donation-container {
        padding: 0 15px;
      }
      
      .donation-card {
        padding: 30px 20px;
      }
      
      .amount-options {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .payment-options {
        flex-direction: column;
      }
      
      .form-actions {
        flex-direction: column-reverse;
        gap: 15px;
      }
      
      .btn {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <a href="/" class="logo">
      <div class="logo-icon">
        <i class="fas fa-hands-helping"></i>
      </div>
      <div class="logo-text">NGO Connect</div>
    </a>
    <a href="/donor/campaigns" class="back-link">
      <i class="fas fa-arrow-left"></i>
      Back to Campaigns
    </a>
  </header>
  
  <!-- Main Content -->
  <div class="donation-container">
    <div class="donation-header">
      <h1 class="donation-title">Make a Donation</h1>
      <p class="donation-subtitle">Your contribution will help make a difference. Every dollar counts!</p>
    </div>
    
    <form class="donation-card" action="/donor/donate/<%= campaignId %>" method="POST">
      <!-- Amount Selection -->
      <div class="amount-section">
        <h3 class="section-title">
          <i class="fas fa-dollar-sign"></i>
          Select Amount
        </h3>
        
        <div class="amount-options">
          <div class="amount-option">
            <input type="radio" id="amount-25" name="amount" value="25">
            <label for="amount-25">$25</label>
          </div>
          <div class="amount-option">
            <input type="radio" id="amount-50" name="amount" value="50">
            <label for="amount-50">$50</label>
          </div>
          <div class="amount-option">
            <input type="radio" id="amount-100" name="amount" value="100">
            <label for="amount-100">$100</label>
          </div>
          <div class="amount-option">
            <input type="radio" id="amount-250" name="amount" value="250">
            <label for="amount-250">$250</label>
          </div>
          <div class="amount-option">
            <input type="radio" id="amount-500" name="amount" value="500">
            <label for="amount-500">$500</label>
          </div>
          <div class="amount-option">
            <input type="radio" id="amount-1000" name="amount" value="1000">
            <label for="amount-1000">$1000</label>
          </div>
        </div>
        
        <div class="custom-amount">
          <span class="currency">$</span>
          <input type="number" name="customAmount" placeholder="Other amount" min="1" step="1">
        </div>
      </div>
      
      <!-- Payment Method -->
      <div class="payment-section">
        <h3 class="section-title">
          <i class="fas fa-credit-card"></i>
          Payment Method
        </h3>
        
        <div class="payment-options">
          <div class="payment-option">
            <input type="radio" id="payment-card" name="paymentMethod" value="card" checked>
            <label for="payment-card">
              <i class="fas fa-credit-card payment-icon"></i>
              Credit Card
            </label>
          </div>
          <div class="payment-option">
            <input type="radio" id="payment-paypal" name="paymentMethod" value="paypal">
            <label for="payment-paypal">
              <i class="fab fa-paypal payment-icon"></i>
              PayPal
            </label>
          </div>
          <div class="payment-option">
            <input type="radio" id="payment-bank" name="paymentMethod" value="bank">
            <label for="payment-bank">
              <i class="fas fa-university payment-icon"></i>
              Bank Transfer
            </label>
          </div>
        </div>
      </div>
      
      <!-- Donor Information -->
      <div class="info-section">
        <h3 class="section-title">
          <i class="fas fa-user"></i>
          Your Information
        </h3>
        
        <div class="form-group">
          <label for="name" class="form-label">Full Name *</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="John Doe" required>
        </div>
        
        <div class="form-group">
          <label for="email" class="form-label">Email Address *</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="your@email.com" required>
        </div>
        
        <div class="form-group">
          <label for="message" class="form-label">Message (Optional)</label>
          <textarea id="message" name="message" class="form-control" placeholder="Add a personal message of support"></textarea>
        </div>
      </div>
      
      <!-- Form Actions -->
      <div class="form-actions">
        <a href="/donor/campaigns" class="btn btn-outline">
          <i class="fas fa-times"></i> Cancel
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-heart"></i> Complete Donation
        </button>
      </div>
      
      <!-- Impact Message -->
      <div class="impact-message">
        <i class="fas fa-hands-helping impact-icon"></i>
        <p class="impact-text">Your donation will help provide essential resources to those in need. Thank you for your generosity!</p>
      </div>
    </form>
  </div>

  <script>
    // Handle amount selection
    const amountInputs = document.querySelectorAll('input[name="amount"]');
    const customAmountInput = document.querySelector('input[name="customAmount"]');
    
    amountInputs.forEach(input => {
      input.addEventListener('change', () => {
        customAmountInput.value = '';
      });
    });
    
    customAmountInput.addEventListener('focus', () => {
      amountInputs.forEach(input => {
        input.checked = false;
      });
    });
    
    // Form validation
    const form = document.querySelector('.donation-card');
    form.addEventListener('submit', (e) => {
      const amountSelected = document.querySelector('input[name="amount"]:checked');
      const customAmount = document.querySelector('input[name="customAmount"]').value;
      
      if (!amountSelected && !customAmount) {
        e.preventDefault();
        alert('Please select or enter a donation amount');
      }
    });
  </script>
</body>
</html>