<%- include('../partials/sidebar') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | NGO Connect</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4361ee;
      --primary-light: #4895ef;
      --secondary: #3f37c9;
      --accent: #f72585;
      --dark: #1a1a2e;
      --light: #f8f9fa;
      --success: #4cc9f0;
      --warning: #f8961e;
      --danger: #ef233c;
      --sidebar-width: 280px;
      --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --elevated-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    body {
      background-color: #f8fafc;
      color: var(--dark);
      min-height: 100vh;
      display: flex;
    }
    
    /* Modern Sidebar */
    .sidebar {
      width: var(--sidebar-width);
      background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
      padding: 30px 0;
      position: fixed;
      height: 100vh;
      transition: all 0.3s ease;
      z-index: 100;
      border-right: none;
    }
    
    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 0 30px 30px;
      margin-bottom: 30px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .logo-icon {
      width: 40px;
      height: 40px;
      background: var(--primary);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.2rem;
    }
    
    .logo-text {
      font-size: 1.3rem;
      font-weight: 700;
      color: white;
    }
    
    .nav-menu {
      padding: 0 20px;
    }
    
    .nav-title {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: rgba(255, 255, 255, 0.5);
      margin: 25px 0 15px;
      padding-left: 10px;
    }
    
    .nav-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 15px;
      border-radius: 8px;
      margin-bottom: 5px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      transition: all 0.3s ease;
      font-weight: 500;
    }
    
    .nav-item i {
      width: 24px;
      text-align: center;
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.6);
    }
    
    .nav-item.active {
      background: rgba(67, 97, 238, 0.2);
      color: white;
      font-weight: 600;
    }
    
    .nav-item.active i {
      color: white;
    }
    
    .nav-item:hover:not(.active) {
      background: rgba(255, 255, 255, 0.05);
      color: white;
    }
    
    .nav-item:hover:not(.active) i {
      color: white;
    }
    
    /* Main Content Styles */
    .main-content {
      flex: 1;
      margin-left: var(--sidebar-width);
      transition: all 0.3s ease;
      background-color: #f8fafc;
    }
    
    /* Modern Top Bar */
    .top-bar {
      background: white;
      padding: 18px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: var(--card-shadow);
      position: sticky;
      top: 0;
      z-index: 10;
      border-bottom: 1px solid #f1f5f9;
    }
    
    .page-title h1 {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--dark);
    }
    
    .user-menu {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    
    .user-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .user-avatar:hover {
      transform: scale(1.05);
      box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
    }
    
    .logout-btn {
      background: none;
      border: none;
      color: #64748b;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 0.9rem;
      font-weight: 500;
      padding: 8px 12px;
      border-radius: 8px;
      transition: all 0.3s ease;
    }
    
    .logout-btn:hover {
      background: #f1f5f9;
      color: var(--danger);
    }
    
    .content-area {
      padding: 30px;
    }
    
    /* Modern Dashboard Cards */
    .stats-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
      margin-bottom: 30px;
    }
    
    .stat-card {
      background: white;
      border-radius: 16px;
      padding: 25px;
      box-shadow: var(--card-shadow);
      transition: all 0.3s ease;
      border: 1px solid #f1f5f9;
      position: relative;
      overflow: hidden;
    }
    
    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: var(--primary);
    }
    
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--elevated-shadow);
    }
    
    .stat-card.success::before {
      background: var(--success);
    }
    
    .stat-card.warning::before {
      background: var(--warning);
    }
    
    .stat-card .card-title {
      font-size: 0.9rem;
      color: #64748b;
      margin-bottom: 12px;
      font-weight: 500;
    }
    
    .stat-card .card-value {
      font-size: 2.2rem;
      font-weight: 700;
      margin-bottom: 8px;
      color: var(--dark);
    }
    
    .stat-card .card-change {
      font-size: 0.85rem;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    
    .stat-card .card-change.positive {
      color: var(--success);
    }
    
    .stat-card .card-change.negative {
      color: var(--danger);
    }
    
    /* Modern Sections */
    .dashboard-section {
      background: white;
      border-radius: 16px;
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: var(--card-shadow);
      border: 1px solid #f1f5f9;
    }
    
    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .section-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--dark);
    }
    
    .section-actions {
      display: flex;
      gap: 12px;
    }
    
    /* Modern Buttons */
    .btn {
      padding: 10px 18px;
      border-radius: 10px;
      border: none;
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    
    .btn-primary {
      background: var(--primary);
      color: white;
      box-shadow: 0 4px 6px -1px rgba(67, 97, 238, 0.3), 0 2px 4px -1px rgba(67, 97, 238, 0.1);
    }
    
    .btn-primary:hover {
      background: var(--secondary);
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(67, 97, 238, 0.3), 0 4px 6px -2px rgba(67, 97, 238, 0.1);
    }
    
    .btn-outline {
      background: transparent;
      border: 1px solid #e2e8f0;
      color: #475569;
      transition: all 0.3s ease;
    }
    
    .btn-outline:hover {
      background: #f8fafc;
      border-color: #cbd5e1;
      color: var(--dark);
      transform: translateY(-2px);
    }
    
    /* Activity Feed */
    .activity-feed {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }
    
    .activity-item {
      display: flex;
      align-items: flex-start;
      gap: 16px;
      padding: 16px;
      border-radius: 12px;
      transition: all 0.3s ease;
    }
    
    .activity-item:hover {
      background: #f8fafc;
    }
    
    .activity-icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #f1f5f9;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--primary);
      flex-shrink: 0;
    }
    
    .activity-content {
      flex: 1;
    }
    
    .activity-title {
      font-weight: 600;
      margin-bottom: 4px;
      color: var(--dark);
    }
    
    .activity-description {
      font-size: 0.9rem;
      color: #64748b;
      margin-bottom: 4px;
    }
    
    .activity-time {
      font-size: 0.8rem;
      color: #94a3b8;
    }
    
    /* Responsive Design */
    @media (max-width: 992px) {
      .sidebar {
        transform: translateX(-100%);
      }
      
      .sidebar.active {
        transform: translateX(0);
      }
      
      .main-content {
        margin-left: 0;
      }
    }
    
    @media (max-width: 768px) {
      .stats-cards {
        grid-template-columns: 1fr;
      }
      
      .section-actions {
        flex-wrap: wrap;
      }
      
      .top-bar {
        padding: 15px 20px;
      }
      
      .content-area {
        padding: 20px;
      }
    }
    
    /* Animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .stat-card {
      animation: fadeIn 0.5s ease-out forwards;
    }
    
    .stat-card:nth-child(2) {
      animation-delay: 0.1s;
    }
    
    .stat-card:nth-child(3) {
      animation-delay: 0.2s;
    }
    
    .dashboard-section {
      animation: fadeIn 0.6s ease-out forwards;
    }
    
    /* Modern Scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    
    ::-webkit-scrollbar-track {
      background: #f1f5f9;
    }
    
    ::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 4px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: #94a3b8;
    }
  </style>
</head>
<body>
  
  <!-- Main Content Area -->
  <main class="main-content">
    <!-- Top Bar -->
    <div class="top-bar">
      <div class="page-title">
        <h1>Admin Dashboard</h1>
      </div>
      <div class="user-menu">
        <div class="user-avatar">AD</div>
        <button class="logout-btn" onclick="window.location.href='/logout'">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </button>
      </div>
    </div>
    
    <!-- Dashboard Content -->
    <div class="content-area">
      <!-- Stats Cards -->
      <div class="stats-cards">
        <div class="stat-card">
          <div class="card-title">Verified NGOs</div>
          <div class="card-value"><%= verifiedNgos %></div>
          <div class="card-change positive">
            <i class="fas fa-arrow-up"></i>
            <span>12% from last month</span>
          </div>
        </div>
        
        <div class="stat-card success">
          <div class="card-title">Active Donors</div>
          <div class="card-value"><%= activeDonors %></div>
          <div class="card-change positive">
            <i class="fas fa-arrow-up"></i>
            <span>8% from last month</span>
          </div>
        </div>
        
        <div class="stat-card warning">
          <div class="card-title">Active Campaigns</div>
          <div class="card-value"><%= activeCampaigns %></div>
          <div class="card-change negative">
            <i class="fas fa-arrow-down"></i>
            <span>3% from last month</span>
          </div>
        </div>
      </div>
      
      <!-- Quick Actions Section -->
      <div class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">Quick Actions</h2>
        </div>
        <div class="section-actions">
          <button class="btn btn-primary" onclick="window.location.href='/admin/verify-ngos'">
            <i class="fas fa-check-circle"></i>
            Verify NGOs
          </button>
          <button class="btn btn-outline" onclick="window.location.href='/admin/manage-users'">
            <i class="fas fa-users-cog"></i>
            Manage Users
          </button>
          <button class="btn btn-outline" onclick="window.location.href='/admin/create-campaign'">
            <i class="fas fa-plus"></i>
            Create Campaign
          </button>
          <button class="btn btn-outline" onclick="window.location.href='/admin/reports'">
            <i class="fas fa-chart-bar"></i>
            View Reports
          </button>
        </div>
      </div>
      
      <!-- Recent Activity Section -->
      <div class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">Recent Activity</h2>
          <button class="btn btn-outline">
            View All
          </button>
        </div>
        <div class="activity-feed">
          <div class="activity-item">
            <div class="activity-icon">
              <i class="fas fa-user-check"></i>
            </div>
            <div class="activity-content">
              <div class="activity-title">New NGO Approved</div>
              <div class="activity-description">"Helping Hands Foundation" has been verified and approved</div>
              <div class="activity-time">2 hours ago</div>
            </div>
          </div>
          <div class="activity-item">
            <div class="activity-icon">
              <i class="fas fa-donate"></i>
            </div>
            <div class="activity-content">
              <div class="activity-title">Donation Received</div>
              <div class="activity-description">$5,000 donation for "Education for All" campaign</div>
              <div class="activity-time">5 hours ago</div>
            </div>
          </div>
          <div class="activity-item">
            <div class="activity-icon">
              <i class="fas fa-user-slash"></i>
            </div>
            <div class="activity-content">
              <div class="activity-title">User Suspended</div>
              <div class="activity-description">User #2345 has been suspended for policy violation</div>
              <div class="activity-time">Yesterday</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>