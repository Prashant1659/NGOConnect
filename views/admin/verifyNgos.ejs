<%- include('../partials/sidebar') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify NGOs | NGO Connect</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4361ee;
      --primary-light: #4895ef;
      --primary-dark: #3a0ca3;
      --secondary: #3f37c9;
      --accent: #f72585;
      --accent-light: #ff70a5;
      --dark: #1a1a2e;
      --dark-light: #2d2d44;
      --light: #f8f9fa;
      --light-gray: #f1f5f9;
      --gray: #e2e8f0;
      --success: #4cc9f0;
      --success-light: #90e0ef;
      --warning: #f8961e;
      --warning-light: #ffb347;
      --danger: #ef233c;
      --danger-light: #ff6b6b;
      --sidebar-width: 280px;
      --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
      --elevated-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --glass-bg: rgba(255, 255, 255, 0.85);
      --transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    body {
      background-color: #f8fafc;
      color: var(--dark);
      min-height: 100vh;
      display: flex;
      line-height: 1.6;
    }
    
    /* Main Content Styles */
    .main-content {
      flex: 1;
      margin-left: var(--sidebar-width);
      transition: all 0.3s ease;
      background-color: #f8fafc;
    }
    
    /* Modern Top Bar */
    .top-bar {
      background: var(--glass-bg);
      padding: 18px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: var(--card-shadow);
      position: sticky;
      top: 0;
      z-index: 10;
      border-bottom: 1px solid var(--light-gray);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
    }
    
    .page-title h1 {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--dark);
      position: relative;
      display: inline-block;
    }
    
    .page-title h1::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 50px;
      height: 3px;
      background: var(--primary);
      border-radius: 3px;
    }
    
    .content-area {
      padding: 30px;
    }
    
    /* Verification Page Specific Styles */
    .verification-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      flex-wrap: wrap;
      gap: 15px;
    }
    
    .verification-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--dark);
      position: relative;
    }
    
    .verification-title::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 50px;
      height: 3px;
      background: linear-gradient(to right, var(--primary), var(--accent));
      border-radius: 3px;
    }
    
    .verification-status {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      background: rgba(248, 150, 30, 0.1);
      color: var(--warning);
    }
    
    /* NGO Cards */
    .ngos-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
      gap: 25px;
    }
    
    .ngo-card {
      background: white;
      border-radius: 16px;
      overflow: hidden;
      transition: var(--transition);
      position: relative;
      box-shadow: var(--card-shadow);
      border: 1px solid var(--light-gray);
      display: flex;
      flex-direction: column;
    }
    
    .ngo-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--elevated-shadow);
    }
    
    .ngo-header {
      padding: 24px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      background: linear-gradient(135deg, rgba(67, 97, 238, 0.05) 0%, rgba(63, 55, 201, 0.05) 100%);
    }
    
    .ngo-name {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 5px;
      color: var(--dark);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .ngo-name i {
      color: var(--primary);
      font-size: 1.1rem;
    }
    
    .ngo-email {
      color: #64748b;
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    
    .ngo-email i {
      color: var(--primary-light);
      font-size: 0.9rem;
    }
    
    .ngo-body {
      padding: 24px;
      flex: 1;
    }
    
    .detail-row {
      display: flex;
      margin-bottom: 16px;
      align-items: flex-start;
    }
    
    .detail-label {
      width: 140px;
      color: #64748b;
      font-size: 0.9rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    
    .detail-label i {
      width: 18px;
      color: var(--primary-light);
      font-size: 0.85rem;
    }
    
    .detail-value {
      flex: 1;
      font-weight: 500;
      color: var(--dark);
      line-height: 1.5;
    }
    
    .documents-list {
      margin-top: 24px;
      background: rgba(241, 245, 249, 0.5);
      border-radius: 12px;
      padding: 16px;
    }
    
    .documents-title {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 16px;
      color: var(--dark);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .documents-title i {
      color: var(--primary);
    }
    
    .document-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 0;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .document-item:last-child {
      border-bottom: none;
    }
    
    .document-icon {
      color: var(--primary);
      font-size: 1.2rem;
      width: 24px;
      text-align: center;
    }
    
    .document-name {
      flex: 1;
      font-size: 0.9rem;
      color: var(--dark);
    }
    
    .view-doc {
      color: var(--primary);
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 600;
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: 4px;
    }
    
    .view-doc:hover {
      color: var(--secondary);
      text-decoration: underline;
    }
    
    .ngo-footer {
      padding: 20px;
      background: rgba(249, 250, 251, 0.7);
      display: flex;
      justify-content: space-between;
      gap: 15px;
      border-top: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    /* Buttons */
    .btn {
      padding: 10px 20px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
      display: inline-flex;
      align-items: center;
      gap: 8px;
      text-decoration: none;
      border: none;
      font-size: 0.9rem;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(67, 97, 238, 0.3);
    }
    
    .btn-success {
      background: linear-gradient(135deg, var(--success) 0%, #0891b2 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }
    
    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(16, 185, 129, 0.3);
    }
    
    .btn-danger {
      background: linear-gradient(135deg, var(--danger) 0%, #b91c1c 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
    }
    
    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(239, 68, 68, 0.3);
    }
    
    /* Empty State */
    .empty-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 60px 30px;
      text-align: center;
      background: white;
      border-radius: 16px;
      box-shadow: var(--card-shadow);
      grid-column: 1 / -1;
    }
    
    .empty-state i {
      font-size: 3rem;
      color: var(--primary-light);
      margin-bottom: 20px;
    }
    
    .empty-state h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
      color: var(--dark);
    }
    
    .empty-state p {
      color: #64748b;
      max-width: 500px;
      margin-bottom: 20px;
    }
    
    /* Responsive Design */
    @media (max-width: 1024px) {
      .ngos-grid {
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      }
    }
    
    @media (max-width: 768px) {
      .verification-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .ngo-footer {
        flex-direction: column;
      }
      
      .btn {
        width: 100%;
        justify-content: center;
      }
    }
    
    @media (max-width: 480px) {
      .ngos-grid {
        grid-template-columns: 1fr;
      }
      
      .detail-row {
        flex-direction: column;
        gap: 4px;
      }
      
      .detail-label {
        width: 100%;
      }
      
      .content-area {
        padding: 20px;
      }
    }
    
    /* Animations */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .ngo-card {
      animation: fadeIn 0.6s ease-out forwards;
    }
    
    .ngo-card:nth-child(1) { animation-delay: 0.1s; }
    .ngo-card:nth-child(2) { animation-delay: 0.2s; }
    .ngo-card:nth-child(3) { animation-delay: 0.3s; }
    .ngo-card:nth-child(4) { animation-delay: 0.4s; }
    
    /* Status Badges */
    .status-badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
    }
    
    .status-pending {
      background: rgba(248, 150, 30, 0.1);
      color: var(--warning);
    }
    
    .status-approved {
      background: rgba(76, 201, 240, 0.1);
      color: var(--success);
    }
    
    .status-rejected {
      background: rgba(239, 35, 60, 0.1);
      color: var(--danger);
    }
  </style>
</head>
<body>
  
  <!-- Main Content Area -->
  <main class="main-content">
    <!-- Top Bar -->
    <div class="top-bar">
      <div class="page-title">
        <h1>NGO Verification</h1>
      </div>
      <div class="user-menu">
        <div class="user-avatar">AD</div>
        <button class="logout-btn" onclick="window.location.href='/logout'">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </button>
      </div>
    </div>
    
    <!-- Verification Content -->
    <div class="content-area">
      <div class="verification-header">
        <h1 class="verification-title">Pending Verifications</h1>
        <div>
          <span class="verification-status">
            <i class="fas fa-clock"></i> <%= ngos.length %> Pending Verifications
          </span>
        </div>
      </div>
      
      <!-- NGO List -->
      <div class="ngos-grid">
        <% if (ngos.length === 0) { %>
          <div class="empty-state">
            <i class="fas fa-check-circle"></i>
            <h3>No NGOs Pending Verification</h3>
            <p>All NGOs have been processed. Check back later for new verification requests.</p>
            <button class="btn btn-primary" onclick="window.location.href='/admin/dashboard'">
              <i class="fas fa-tachometer-alt"></i> Go to Dashboard
            </button>
          </div>
        <% } else { %>
          <% ngos.forEach(ngo => { %>
            <div class="ngo-card">
              <div class="ngo-header">
                <h3 class="ngo-name">
                  <i class="fas fa-hands-helping"></i>
                  <%= ngo.organizationName %>
                </h3>
                <p class="ngo-email">
                  <i class="fas fa-envelope"></i>
                  <%= ngo.email %>
                </p>
              </div>
              
              <div class="ngo-body">
                <div class="detail-row">
                  <span class="detail-label">
                    <i class="far fa-calendar-alt"></i>
                    Registration Date:
                  </span>
                  <span class="detail-value"><%= new Date(ngo.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                </div>
                
                <div class="detail-row">
                  <span class="detail-label">
                    <i class="fas fa-user-tie"></i>
                    Contact Person:
                  </span>
                  <span class="detail-value"><%= ngo.user.name %></span>
                </div>
                
                <div class="detail-row">
                  <span class="detail-label">
                    <i class="fas fa-building"></i>
                    Organization Type:
                  </span>
                  <span class="detail-value"><%= ngo.organizationType %></span>
                </div>
                
                <div class="detail-row">
                  <span class="detail-label">
                    <i class="fas fa-map-marker-alt"></i>
                    Location:
                  </span>
                  <span class="detail-value"><%= ngo.address ? ngo.address : 'Not specified' %></span>
                </div>
                
                <div class="documents-list">
                  <h4 class="documents-title">
                    <i class="fas fa-file-upload"></i>
                    Submitted Documents
                  </h4>
                  
                  <div class="document-item">
                    <i class="fas fa-file-certificate document-icon"></i>
                    <span class="document-name">Registration Certificate</span>
                    <% if (ngo && ngo.certificate) { %>
                      <a href="<%= ngo.certificate %>" target="_blank" class="view-doc">
                        View <i class="fas fa-external-link-alt"></i>
                      </a>
                    <% } else { %>
                      <span class="text-gray-400">Not provided</span>
                    <% } %>
                  </div>
                  
                  <div class="document-item">
                    <i class="fas fa-receipt document-icon"></i>
                    <span class="document-name">Tax Exemption Proof</span>
                    <% if (ngo && ngo.documents && ngo.documents.taxExemptionProof) { %>
                      <a href="<%= ngo.documents.taxExemptionProof %>" target="_blank" class="view-doc">
                        View <i class="fas fa-external-link-alt"></i>
                      </a>
                    <% } else { %>
                      <span class="text-gray-400">Not provided</span>
                    <% } %>
                  </div>
                  
                  <% if(ngo && ngo.documents && ngo.documents.otherDocuments) { %>
                    <div class="document-item">
                      <i class="fas fa-file-archive document-icon"></i>
                      <span class="document-name">Additional Documents</span>
                      <a href="<%= ngo.documents.otherDocuments %>" target="_blank" class="view-doc">
                        View <i class="fas fa-external-link-alt"></i>
                      </a>
                    </div>
                  <% } %>
                </div>
              </div>
              
              <div class="ngo-footer">
                <form action="/admin/approve-ngo/<%= ngo._id %>" method="POST" style="display: inline; flex: 1;">
                  <button type="submit" class="btn btn-success" onclick="return confirm('Approve <%= ngo.organizationName %>? This action cannot be undone.')">
                    <i class="fas fa-check-circle"></i> Approve
                  </button>
                </form>
                
                <form action="/admin/reject-ngo/<%= ngo._id %>" method="POST" style="display: inline; flex: 1;">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Reject <%= ngo.organizationName %>? This action cannot be undone.')">
                    <i class="fas fa-times-circle"></i> Reject
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </main>

  <!-- Floating Action Button -->
  <button class="fab" onclick="window.location.href='/admin/dashboard'">
    <i class="fas fa-tachometer-alt"></i>
  </button>

  <script>
    // Add confirmation for all form submissions
    document.querySelectorAll('form').forEach(form => {
      form.addEventListener('submit', (e) => {
        if (!confirm('Are you sure you want to perform this action?')) {
          e.preventDefault();
        }
      });
    });
  </script>
</body>
</html>