<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Profile | NGO Connect</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4F46E5;
      --primary-light: #6366F1;
      --primary-dark: #4338CA;
      --accent: #EC4899;
      --success: #10B981;
      --warning: #F59E0B;
      --danger: #EF4444;
      --dark: #111827;
      --darker: #1F2937;
      --light: #F9FAFB;
      --gray: #6B7280;
      --light-gray: #E5E7EB;
      --lighter-gray: #F3F4F6;
      --radius: 12px;
      --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }
    
    body {
      background-color: var(--lighter-gray);
      color: var(--dark);
      line-height: 1.5;
    }
    
    /* Header Styles */
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 40px;
      background: white;
      box-shadow: var(--shadow-sm);
      position: sticky;
      top: 0;
      z-index: 50;
    }
    
    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .logo-icon {
      width: 36px;
      height: 36px;
      background: var(--primary);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1rem;
    }
    
    .logo-text {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--dark);
    }
    
    .logo-text span {
      color: var(--primary);
    }
    
    .user-nav {
      display: flex;
      align-items: center;
      gap: 28px;
    }
    
    .nav-link {
      color: var(--gray);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.2s ease;
      position: relative;
      padding: 8px 0;
    }
    
    .nav-link:hover {
      color: var(--primary);
    }
    
    .nav-link.active {
      color: var(--primary);
      font-weight: 600;
    }
    
    .nav-link.active::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: var(--primary);
      border-radius: 2px;
    }
    
    /* Main Content */
    .profile-container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 30px;
      display: grid;
      grid-template-columns: 300px 1fr;
      gap: 30px;
    }
    
    /* Sidebar */
    .profile-sidebar {
      background: white;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 30px;
      height: fit-content;
      position: sticky;
      top: 100px;
    }
    
    .profile-header {
      text-align: center;
      margin-bottom: 25px;
    }
    
    .profile-avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid var(--light-gray);
      margin: 0 auto 15px;
      display: block;
    }
    
    .profile-name {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 5px;
      color: var(--darker);
    }
    
    .profile-role {
      color: var(--primary);
      font-weight: 600;
      font-size: 0.9rem;
      margin-bottom: 15px;
    }
    
    .profile-stats {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 25px;
    }
    
    .stat-item {
      text-align: center;
    }
    
    .stat-number {
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--darker);
    }
    
    .stat-label {
      font-size: 0.8rem;
      color: var(--gray);
    }
    
    .profile-menu {
      list-style: none;
      margin-top: 30px;
    }
    
    .menu-item {
      margin-bottom: 12px;
    }
    
    .menu-link {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 15px;
      border-radius: 8px;
      color: var(--gray);
      text-decoration: none;
      font-weight: 500;
      transition: all 0.2s ease;
    }
    
    .menu-link:hover, .menu-link.active {
      background: var(--lighter-gray);
      color: var(--primary);
    }
    
    .menu-link i {
      width: 20px;
      text-align: center;
    }
    
    /* Main Profile Content */
    .profile-content {
      background: white;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 30px;
    }
    
    .content-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      padding-bottom: 20px;
      border-bottom: 1px solid var(--light-gray);
    }
    
    .content-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--darker);
    }
    
    .edit-btn {
      padding: 8px 16px;
      border-radius: 6px;
      background: var(--lighter-gray);
      color: var(--gray);
      font-weight: 500;
      font-size: 0.9rem;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 6px;
      transition: all 0.2s ease;
    }
    
    .edit-btn:hover {
      background: var(--light-gray);
      color: var(--darker);
    }
    
    /* Profile Info */
    .info-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .info-group {
      margin-bottom: 20px;
    }
    
    .info-label {
      font-size: 0.85rem;
      color: var(--gray);
      margin-bottom: 5px;
      display: block;
    }
    
    .info-value {
      font-weight: 500;
      color: var(--darker);
      padding: 10px 0;
      border-bottom: 1px solid var(--light-gray);
    }
    
    /* About Section */
    .about-section {
      margin-top: 30px;
    }
    
    .about-content {
      line-height: 1.7;
      color: var(--darker);
    }
    
    /* Campaigns Section */
    .campaigns-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
      margin-top: 25px;
    }
    
    .campaign-card {
      background: white;
      border-radius: var(--radius);
      overflow: hidden;
      box-shadow: var(--shadow-sm);
      transition: all 0.2s ease;
    }
    
    .campaign-card:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow);
    }
    
    .campaign-image {
      width: 100%;
      height: 160px;
      object-fit: cover;
    }
    
    .campaign-body {
      padding: 15px;
    }
    
    .campaign-title {
      font-weight: 600;
      margin-bottom: 8px;
      color: var(--darker);
    }
    
    .campaign-description {
      font-size: 0.9rem;
      color: var(--gray);
      margin-bottom: 15px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .campaign-progress {
      height: 6px;
      background: var(--light-gray);
      border-radius: 3px;
      margin-bottom: 10px;
      overflow: hidden;
    }
    
    .progress-bar {
      height: 100%;
      background: var(--primary);
      border-radius: 3px;
    }
    
    .campaign-stats {
      display: flex;
      justify-content: space-between;
      font-size: 0.85rem;
    }
    
    .raised-amount {
      font-weight: 600;
      color: var(--darker);
    }
    
    .goal-amount {
      color: var(--gray);
    }
    
    /* Responsive Design */
    @media (max-width: 992px) {
      .profile-container {
        grid-template-columns: 1fr;
      }
      
      .profile-sidebar {
        position: static;
      }
    }
    
    @media (max-width: 768px) {
      .dashboard-header {
        padding: 16px 20px;
      }
      
      .profile-container {
        padding: 0 20px;
      }
      
      .info-grid {
        grid-template-columns: 1fr;
      }
      
      .profile-content {
        padding: 20px;
      }
    }
    
    @media (max-width: 480px) {
      .dashboard-header {
        flex-direction: column;
        gap: 16px;
      }
      
      .user-nav {
        width: 100%;
        justify-content: space-between;
        gap: 8px;
      }
      
      .nav-link span {
        display: none;
      }
      
      .profile-stats {
        gap: 10px;
      }
    }
  </style>
</head>
<body>
  <!-- Dashboard Header -->
  <header class="dashboard-header">
    <div class="logo">
      <div class="logo-icon">
        <i class="fas fa-hands-helping"></i>
      </div>
      <div class="logo-text">NGO<span>Connect</span></div>
    </div>
    
    <nav class="user-nav">
      <a href="/ngo/dashboard" class="nav-link">
        <i class="fas fa-tachometer-alt"></i>
        <span>Dashboard</span>
      </a>
      <a href="/ngo/campaigns" class="nav-link">
        <i class="fas fa-list"></i>
        <span>Campaigns</span>
      </a>
      <a href="/ngo/create-campaign" class="nav-link">
        <i class="fas fa-plus-circle"></i>
        <span>Create</span>
      </a>
      <a href="/ngo/profile" class="nav-link active">
        <i class="fas fa-user"></i>
        <span>Profile</span>
      </a>
    </nav>
  </header>
  
  <!-- Main Content -->
  <div class="profile-container">
    <!-- Profile Sidebar -->
    <aside class="profile-sidebar">
      <div class="profile-header">
        <img src="https://randomuser.me/api/portraits/women/45.jpg" alt="Profile Photo" class="profile-avatar">
        <h2 class="profile-name">Sarah Johnson</h2>
        <p class="profile-role">NGO Director</p>
        <div class="profile-stats">
          <div class="stat-item">
            <div class="stat-number">12</div>
            <div class="stat-label">Campaigns</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">4.8</div>
            <div class="stat-label">Rating</div>
          </div>
        </div>
      </div>
      
      <ul class="profile-menu">
        <li class="menu-item"><a href="#" class="menu-link active"><i class="fas fa-user-circle"></i> Profile</a></li>
        <li class="menu-item"><a href="#" class="menu-link"><i class="fas fa-cog"></i> Settings</a></li>
        <li class="menu-item"><a href="#" class="menu-link"><i class="fas fa-lock"></i> Security</a></li>
        <li class="menu-item"><a href="#" class="menu-link"><i class="fas fa-bell"></i> Notifications</a></li>
        <li class="menu-item"><a href="#" class="menu-link"><i class="fas fa-question-circle"></i> Help</a></li>
      </ul>
    </aside>
    
    <!-- Profile Content -->
    <main class="profile-content">
      <div class="content-header">
        <h1 class="content-title">Profile Information</h1>
        <button class="edit-btn"><i class="fas fa-pencil-alt"></i> Edit Profile</button>
      </div>
      
      <div class="info-grid">
        <div class="info-group">
          <span class="info-label">Full Name</span>
          <p class="info-value">Sarah Johnson</p>
        </div>
        <div class="info-group">
          <span class="info-label">Email</span>
          <p class="info-value">sarah.johnson@example.com</p>
        </div>
        <div class="info-group">
          <span class="info-label">Phone</span>
          <p class="info-value">+1 (555) 123-4567</p>
        </div>
        <div class="info-group">
          <span class="info-label">Organization</span>
          <p class="info-value">Green Earth Initiative</p>
        </div>
        <div class="info-group">
          <span class="info-label">Position</span>
          <p class="info-value">Director</p>
        </div>
        <div class="info-group">
          <span class="info-label">Location</span>
          <p class="info-value">San Francisco, CA</p>
        </div>
      </div>
      
      <div class="about-section">
        <h2 class="content-title" style="margin-bottom: 15px;">About</h2>
        <div class="about-content">
          <p>As the Director of Green Earth Initiative, I lead a team of passionate environmentalists working to combat climate change through community engagement and sustainable practices. With over 10 years of experience in the non-profit sector, I've successfully managed multiple campaigns that have raised over $2M for environmental causes.</p>
          <p style="margin-top: 15px;">My mission is to create a greener future through education, advocacy, and direct action. I believe in the power of communities to drive meaningful change and am committed to empowering individuals to take action in their local environments.</p>
        </div>
      </div>
      
      <div class="campaigns-section" style="margin-top: 40px;">
        <div class="content-header">
          <h1 class="content-title">My Campaigns</h1>
          <a href="/ngo/create-campaign" class="edit-btn"><i class="fas fa-plus"></i> New Campaign</a>
        </div>
        
        <div class="campaigns-grid">
          <!-- Campaign 1 -->
          <div class="campaign-card">
            <img src="https://source.unsplash.com/random/600x400/?tree" alt="Campaign" class="campaign-image">
            <div class="campaign-body">
              <h3 class="campaign-title">Plant 10,000 Trees</h3>
              <p class="campaign-description">Help us plant 10,000 native trees in deforested areas to restore ecosystems and combat climate change.</p>
              <div class="campaign-progress">
                <div class="progress-bar" style="width: 75%"></div>
              </div>
              <div class="campaign-stats">
                <span class="raised-amount">$7,500 raised</span>
                <span class="goal-amount">of $10,000</span>
              </div>
            </div>
          </div>
          
          <!-- Campaign 2 -->
          <div class="campaign-card">
            <img src="https://source.unsplash.com/random/600x400/?ocean" alt="Campaign" class="campaign-image">
            <div class="campaign-body">
              <h3 class="campaign-title">Ocean Cleanup Initiative</h3>
              <p class="campaign-description">Support our efforts to remove plastic waste from coastal areas and protect marine life.</p>
              <div class="campaign-progress">
                <div class="progress-bar" style="width: 42%"></div>
              </div>
              <div class="campaign-stats">
                <span class="raised-amount">$4,200 raised</span>
                <span class="goal-amount">of $10,000</span>
              </div>
            </div>
          </div>
          
          <!-- Campaign 3 -->
          <div class="campaign-card">
            <img src="https://source.unsplash.com/random/600x400/?education" alt="Campaign" class="campaign-image">
            <div class="campaign-body">
              <h3 class="campaign-title">Eco Education Program</h3>
              <p class="campaign-description">Fund environmental education programs for underprivileged schools in urban areas.</p>
              <div class="campaign-progress">
                <div class="progress-bar" style="width: 90%"></div>
              </div>
              <div class="campaign-stats">
                <span class="raised-amount">$9,000 raised</span>
                <span class="goal-amount">of $10,000</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Simple edit profile functionality
    const editBtn = document.querySelector('.edit-btn');
    const infoValues = document.querySelectorAll('.info-value');
    
    editBtn.addEventListener('click', function() {
      infoValues.forEach(value => {
        const currentValue = value.textContent;
        value.innerHTML = `<input type="text" value="${currentValue}" class="form-control" style="padding: 8px 12px; width: 100%;">`;
      });
      
      this.innerHTML = '<i class="fas fa-save"></i> Save Changes';
      this.removeEventListener('click', arguments.callee);
      
      this.addEventListener('click', function() {
        infoValues.forEach(value => {
          const input = value.querySelector('input');
          value.textContent = input.value;
        });
        
        this.innerHTML = '<i class="fas fa-pencil-alt"></i> Edit Profile';
        this.addEventListener('click', arguments.callee);
      });
    });
  </script>
</body>
</html>