<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Campaign | NGO Connect</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4F46E5;
      --primary-light: #6366F1;
      --primary-dark: #4338CA;
      --accent: #EC4899;
      --success: #10B981;
      --warning: #F59E0B;
      --danger: #EF4444;
      --dark: #111827;
      --darker: #1F2937;
      --light: #F9FAFB;
      --gray: #6B7280;
      --light-gray: #E5E7EB;
      --lighter-gray: #F3F4F6;
      --radius: 12px;
      --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }
    
    body {
      background-color: var(--lighter-gray);
      color: var(--dark);
      line-height: 1.5;
    }
    
    /* Header Styles */
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 40px;
      background: white;
      box-shadow: var(--shadow-sm);
      position: sticky;
      top: 0;
      z-index: 50;
    }
    
    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .logo-icon {
      width: 36px;
      height: 36px;
      background: var(--primary);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1rem;
    }
    
    .logo-text {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--dark);
    }
    
    .logo-text span {
      color: var(--primary);
    }
    
    .user-nav {
      display: flex;
      align-items: center;
      gap: 28px;
    }
    
    .nav-link {
      color: var(--gray);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.95rem;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.2s ease;
      position: relative;
      padding: 8px 0;
    }
    
    .nav-link:hover {
      color: var(--primary);
    }
    
    .nav-link.active {
      color: var(--primary);
      font-weight: 600;
    }
    
    .nav-link.active::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: var(--primary);
      border-radius: 2px;
    }
    
    /* Main Content */
    .create-container {
      max-width: 900px;
      margin: 40px auto;
      padding: 0 30px;
    }
    
    /* Page Header */
    .page-header {
      margin-bottom: 32px;
    }
    
    .page-title {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 12px;
      color: var(--darker);
    }
    
    .page-description {
      color: var(--gray);
      max-width: 700px;
      font-size: 0.95rem;
    }
    
    /* Form Styles */
    .campaign-form {
      background: white;
      border-radius: var(--radius);
      padding: 32px;
      box-shadow: var(--shadow);
      margin-bottom: 40px;
    }
    
    .form-section {
      margin-bottom: 32px;
      padding-bottom: 24px;
      border-bottom: 1px solid var(--light-gray);
    }
    
    .form-section:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }
    
    .section-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      color: var(--darker);
    }
    
    .section-title i {
      color: var(--primary);
      font-size: 1rem;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
      font-size: 0.9rem;
      color: var(--darker);
    }
    
    .form-control {
      width: 100%;
      padding: 10px 14px;
      border: 1px solid var(--light-gray);
      border-radius: 8px;
      font-size: 0.95rem;
      transition: all 0.2s ease;
      background-color: white;
    }
    
    .form-control:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
      outline: none;
    }
    
    textarea.form-control {
      min-height: 120px;
      resize: vertical;
      line-height: 1.6;
    }
    
    /* Image Upload */
    .image-upload {
      border: 2px dashed var(--light-gray);
      border-radius: 8px;
      padding: 30px;
      text-align: center;
      cursor: pointer;
      transition: all 0.2s ease;
      background-color: var(--lighter-gray);
    }
    
    .image-upload:hover {
      border-color: var(--primary);
      background-color: rgba(79, 70, 229, 0.03);
    }
    
    .upload-icon {
      font-size: 2rem;
      color: var(--primary);
      margin-bottom: 12px;
    }
    
    .upload-text {
      color: var(--darker);
      margin-bottom: 8px;
      font-weight: 500;
    }
    
    .upload-hint {
      font-size: 0.8rem;
      color: var(--gray);
    }
    
    /* Preview Area */
    .image-preview {
      display: none;
      margin-top: 20px;
      text-align: center;
    }
    
    .preview-image {
      max-width: 100%;
      max-height: 300px;
      border-radius: 8px;
      object-fit: contain;
    }
    
    /* Form Actions */
    .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 12px;
      margin-top: 32px;
      padding-top: 24px;
      border-top: 1px solid var(--light-gray);
    }
    
    .btn {
      padding: 10px 20px;
      border-radius: 8px;
      font-weight: 500;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      border: none;
    }
    
    .btn-primary {
      background: var(--primary);
      color: white;
    }
    
    .btn-primary:hover {
      background: var(--primary-dark);
      transform: translateY(-1px);
      box-shadow: var(--shadow);
    }
    
    .btn-outline {
      background: transparent;
      border: 1px solid var(--light-gray);
      color: var(--gray);
    }
    
    .btn-outline:hover {
      border-color: var(--primary);
      color: var(--primary);
      background-color: rgba(79, 70, 229, 0.05);
    }
    
    /* Rich Text Editor */
    .editor-container {
      border: 1px solid var(--light-gray);
      border-radius: 8px;
      overflow: hidden;
    }
    
    .editor-toolbar {
      padding: 8px 12px;
      background: var(--lighter-gray);
      border-bottom: 1px solid var(--light-gray);
      display: flex;
      gap: 6px;
    }
    
    .editor-btn {
      background: none;
      border: none;
      width: 32px;
      height: 32px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      color: var(--gray);
      transition: all 0.2s ease;
    }
    
    .editor-btn:hover {
      background: var(--light-gray);
      color: var(--darker);
    }
    
    .editor-content {
      padding: 14px;
      min-height: 200px;
      outline: none;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .dashboard-header {
        padding: 16px 20px;
      }
      
      .user-nav {
        gap: 15px;
      }
      
      .create-container {
        padding: 0 20px;
      }
      
      .campaign-form {
        padding: 24px;
      }
      
      .form-actions {
        flex-direction: column-reverse;
      }
      
      .btn {
        width: 100%;
      }
    }
    
    @media (max-width: 480px) {
      .dashboard-header {
        flex-direction: column;
        gap: 16px;
      }
      
      .user-nav {
        width: 100%;
        justify-content: space-between;
        gap: 8px;
      }
      
      .nav-link span {
        display: none;
      }
    }
    
    /* Animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(5px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .campaign-form {
      animation: fadeIn 0.3s ease-out;
    }
  </style>
</head>
<body>
  <!-- Dashboard Header -->
  <header class="dashboard-header">
    <div class="logo">
      <div class="logo-icon">
        <i class="fas fa-hands-helping"></i>
      </div>
      <div class="logo-text">NGO<span>Connect</span></div>
    </div>
    
    <nav class="user-nav">
      <a href="/ngo/dashboard" class="nav-link">
        <i class="fas fa-tachometer-alt"></i>
        <span>Dashboard</span>
      </a>
      <a href="/ngo/campaigns" class="nav-link">
        <i class="fas fa-list"></i>
        <span>Campaigns</span>
      </a>
      <a href="/ngo/create-campaign" class="nav-link active">
        <i class="fas fa-plus-circle"></i>
        <span>Create</span>
      </a>
      <a href="/logout" class="nav-link">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </nav>
  </header>
  
  <!-- Main Content -->
  <div class="create-container">
    <div class="page-header">
      <h1 class="page-title">Start a New Campaign</h1>
      <p class="page-description">Create your fundraising campaign to make a difference. Fill in the details below to get started.</p>
    </div>
    
    <form class="campaign-form" action="/ngo/create-campaign" method="POST" enctype="multipart/form-data">
      <!-- Basic Information Section -->
      <div class="form-section">
        <h3 class="section-title">
          <i class="fas fa-info-circle"></i>
          Campaign Details
        </h3>
        
        <div class="form-group">
          <label for="title" class="form-label">Campaign Title</label>
          <input type="text" id="title" name="title" class="form-control" placeholder="e.g. Clean Water for Rural Communities" required>
        </div>
        
        <div class="form-group">
          <label for="description" class="form-label">Short Description</label>
          <textarea id="description" name="description" class="form-control" placeholder="Briefly describe your campaign (max 200 characters)" maxlength="200" required></textarea>
        </div>
        
        <div class="form-group">
          <label for="category" class="form-label">Category</label>
          <select id="category" name="category" class="form-control" required>
            <option value="">Select a category</option>
            <option value="education">Education</option>
            <option value="health">Health</option>
            <option value="environment">Environment</option>
            <option value="animals">Animals</option>
            <option value="human-rights">Human Rights</option>
            <option value="disaster-relief">Disaster Relief</option>
            <option value="community">Community Development</option>
          </select>
        </div>
      </div>
      
      <!-- Campaign Image Section -->
      <div class="form-section">
        <h3 class="section-title">
          <i class="fas fa-image"></i>
          Campaign Image
        </h3>
        
        <div class="image-upload" id="imageUpload">
          <div class="upload-icon">
            <i class="fas fa-cloud-upload-alt"></i>
          </div>
          <h4 class="upload-text">Upload campaign image</h4>
          <p class="upload-hint">Recommended: 1200Ã—630 pixels (JPG, PNG)</p>
          <input type="file" id="image" name="image" accept="image/*" style="display: none;">
        </div>
        
        <div class="image-preview" id="imagePreview">
          <img id="previewImage" class="preview-image" src="#" alt="Preview">
          <button type="button" class="btn btn-outline" id="changeImage" style="margin-top: 15px;">
            <i class="fas fa-sync-alt"></i> Change Image
          </button>
        </div>
      </div>
      
      <!-- Funding Details Section -->
      <div class="form-section">
        <h3 class="section-title">
          <i class="fas fa-bullseye"></i>
          Funding Goal
        </h3>
        
        <div class="form-group">
          <label for="goalAmount" class="form-label">Target Amount ($)</label>
          <input type="number" id="goalAmount" name="goalAmount" class="form-control" placeholder="e.g. 5000" min="100" required>
        </div>
        
        <div class="form-group">
          <label for="endDate" class="form-label">End Date</label>
          <input type="date" id="endDate" name="endDate" class="form-control" required>
        </div>
      </div>
      
      <!-- Story Section -->
      <div class="form-section">
        <h3 class="section-title">
          <i class="fas fa-edit"></i>
          Your Story
        </h3>
        
        <div class="form-group">
          <label class="form-label">Tell your story</label>
          <div class="editor-container">
            <div class="editor-toolbar">
              <button type="button" class="editor-btn" title="Bold">
                <i class="fas fa-bold"></i>
              </button>
              <button type="button" class="editor-btn" title="Italic">
                <i class="fas fa-italic"></i>
              </button>
              <button type="button" class="editor-btn" title="Bullet List">
                <i class="fas fa-list-ul"></i>
              </button>
              <button type="button" class="editor-btn" title="Link">
                <i class="fas fa-link"></i>
              </button>
            </div>
            <textarea id="story" name="story" class="form-control" style="min-height: 200px; border: none;" placeholder="Tell your story in detail. Explain why this cause matters and how the funds will be used." required></textarea>
          </div>
        </div>
      </div>
      
      <!-- Form Actions -->
      <div class="form-actions">
        <button type="button" class="btn btn-outline">
          <i class="fas fa-times"></i> Cancel
        </button>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-paper-plane"></i> Launch Campaign
        </button>
      </div>
    </form>
  </div>

  <script>
    // Image upload preview functionality
    const imageUpload = document.getElementById('imageUpload');
    const imageInput = document.getElementById('image');
    const imagePreview = document.getElementById('imagePreview');
    const previewImage = document.getElementById('previewImage');
    const changeImage = document.getElementById('changeImage');
    
    imageUpload.addEventListener('click', () => {
      imageInput.click();
    });
    
    imageInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (event) => {
          previewImage.src = event.target.result;
          imageUpload.style.display = 'none';
          imagePreview.style.display = 'block';
        };
        reader.readAsDataURL(file);
      }
    });
    
    changeImage.addEventListener('click', () => {
      imageInput.value = '';
      imagePreview.style.display = 'none';
      imageUpload.style.display = 'block';
    });
    
    // Set minimum date for campaign end date (tomorrow)
    const today = new Date();
    const tomorrow = new Date(today);
    tomorrow.setDate(tomorrow.getDate() + 1);
    
    const dd = String(tomorrow.getDate()).padStart(2, '0');
    const mm = String(tomorrow.getMonth() + 1).padStart(2, '0');
    const yyyy = tomorrow.getFullYear();
    
    document.getElementById('endDate').min = `${yyyy}-${mm}-${dd}`;
    
    // Add basic rich text functionality
    document.querySelectorAll('.editor-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const command = this.querySelector('i').className.replace('fas fa-', '');
        document.execCommand(command, false, null);
      });
    });
  </script>
</body>
</html>