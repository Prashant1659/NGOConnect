      color: white;
      padding: 80px 0;
      position: relative;
      overflow: hidden;
    }
    
    .milestones::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('data:image/svg+xml;base64,');
    }
    
    .milestone-item {
      text-align: center;
      padding: 20px;
      position: relative;
      z-index: 2;
    }
    
    .milestone-number {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 10px;
      color: var(--primary-color);
