      const tags = document.querySelectorAll('.tag');
      tags.forEach(tag => {
        tag.addEventListener('click', function() {
          tags.forEach(t => t.classList.remove('active'));
          this.classList.add('active');
          // Here you would filter recommendations based on the selected tag
          const category = this.textContent.toLowerCase();
          filterRecommendations(category);
        });
      });
      
      function filterRecommendations(category) {
        const container = document.getElementById('recommended-campaigns');
        container.innerHTML = '';
        
        let campaignsToShow = donorData.recommendedCampaigns;
        if (category !== 'all') {
          campaignsToShow = donorData.recommendedCampaigns.filter(
            campaign => campaign.category.toLowerCase() === category
          );
        }
        
        campaignsToShow.forEach(campaign => {
          container.appendChild(createDonationCard(campaign));
        });
      }
      
      // Refresh recommendations
      document.getElementById('refresh-recommendations').addEventListener('click', function() {
        // In a real app, this would fetch new recommendations from the server
        const container = document.getElementById('recommended-campaigns');
        container.innerHTML = '';
        
        // Simulate loading
        container.innerHTML = '<div class="loading-spinner">Loading new recommendations...</div>';
        
        setTimeout(() => {
          container.innerHTML = '';
          donorData.recommendedCampaigns.forEach(campaign => {
            container.appendChild(createDonationCard(campaign));
          });
        }, 1000);
      });
      
      // Initialize animations
      const animateOnScroll = function() {
        const elements = document.querySelectorAll('.stat-card, .donation-card, .action-card, .testimonial-card');
        
        elements.forEach(element => {
          const elementPosition = element.getBoundingClientRect().top;
          const windowHeight = window.innerHeight;
          
          if (elementPosition < windowHeight - 100) {
            element.style.animationPlayState = 'running';
          }
        });
      };
      
      window.addEventListener('scroll', animateOnScroll);
      animateOnScroll(); // Run once on load
    });
