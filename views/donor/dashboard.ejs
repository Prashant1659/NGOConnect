      // Update chart based on time period
      function updateChart(period) {
        let newData;
        let newLabels;
        
        switch(period) {
          case '1m':
            newLabels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
            newData = [80, 120, 150, 200];
            break;
          case '6m':
            newLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
            newData = [120, 190, 300, 500, 200, 300];
            break;
          case '1y':
            newLabels = ['Q1', 'Q2', 'Q3', 'Q4'];
            newData = [610, 800, 750, 900];
            break;
          case 'all':
            newLabels = ['2020', '2021', '2022', '2023'];
            newData = [800, 1200, 1750, 2500];
            break;
          default:
            newLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'];
            newData = [120, 190, 300, 500, 200, 300, 450];
        }
        
        impactChart.data.labels = newLabels;
        impactChart.data.datasets[0].data = newData;
        impactChart.update();
      }
      
      // Create donation card element
      function createDonationCard(data) {
        const card = document.createElement('div');
        card.className = 'donation-card glass-card';
        
        const statusClass = data.status === 'active' ? 'status-active' : 'status-completed';
        const formattedDate = new Date(data.date).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        });
        
        card.innerHTML = `
          <div class="donation-image" style="background-image: url('${data.imageUrl}');">
            <span class="donation-category">${data.category}</span>
            <span class="donation-status ${statusClass}">
              ${data.status}
            </span>
          </div>
          <div class="donation-content">
            <h3 class="donation-title">${data.title}</h3>
            <p class="donation-org">${data.organization}</p>
            <p class="donation-date">
              <i class="far fa-calendar-alt"></i>
              ${formattedDate}
            </p>
            <p class="donation-desc">${data.description}</p>
