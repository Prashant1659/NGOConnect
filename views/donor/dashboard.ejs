    document.addEventListener('DOMContentLoaded', function() {
      // Time filter buttons
      const timeButtons = document.querySelectorAll('.time-btn');
      timeButtons.forEach(button => {
        button.addEventListener('click', function() {
          timeButtons.forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          updateChart(this.dataset.period);
        });
      });
      
      // Initialize chart
      const ctx = document.getElementById('impactChart').getContext('2d');
      let impactChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
          datasets: [{
            label: 'Donation Impact',
            data: [120, 190, 300, 500, 200, 300, 450],
            backgroundColor: 'rgba(108, 99, 255, 0.2)',
            borderColor: 'rgba(108, 99, 255, 1)',
            borderWidth: 2,
            tension: 0.4,
            fill: true
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              callbacks: {
                label: function(context) {
                  return `Impact: ${context.raw} lives`;
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Lives Impacted'
              }
            },
            x: {
              title: {
                display: true,
                text: 'Month'
              }
            }
          }
        }
      });
      
      // Update chart based on time period
      function updateChart(period) {
        let newData;
        let newLabels;
        
        switch(period) {
          case '1m':
            newLabels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
            newData = [80, 120, 150, 200];
            break;
          case '6m':
            newLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
            newData = [120, 190, 300, 500, 200, 300];
            break;
          case '1y':
            newLabels = ['Q1', 'Q2', 'Q3', 'Q4'];
            newData = [610, 800, 750, 900];
            break;
          case 'all':
            newLabels = ['2020', '2021', '2022', '2023'];
            newData = [800, 1200, 1750, 2500];
            break;
          default:
            newLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'];
            newData = [120, 190, 300, 500, 200, 300, 450];
        }
        
        impactChart.data.labels = newLabels;
        impactChart.data.datasets[0].data = newData;
        impactChart.update();
      }
      
      // Tag filtering for recommendations
      const tags = document.querySelectorAll('.tag');
      tags.forEach(tag => {
        tag.addEventListener('click', function() {
          tags.forEach(t => t.classList.remove('active'));
          this.classList.add('active');
          // Here you would filter recommendations based on the selected tag
        });
      });
      
      // Initialize animations
      const animateOnScroll = function() {
        const elements = document.querySelectorAll('.stat-card, .donation-card, .action-card, .testimonial-card');
        
        elements.forEach(element => {
          const elementPosition = element.getBoundingClientRect().top;
          const windowHeight = window.innerHeight;
          
          if (elementPosition < windowHeight - 100) {
            element.style.animationPlayState = 'running';
          }
        });
      };
      
      window.addEventListener('scroll', animateOnScroll);
      animateOnScroll(); // Run once on load
    });
