      // Render recent donations
      const recentDonationsContainer = document.getElementById('recent-donations');
      donorData.recentDonations.forEach(donation => {
        recentDonationsContainer.appendChild(createDonationCard(donation));
      });
      
      // Render tax certificates
      const taxCertificatesBody = document.querySelector('#tax-certificates tbody');
      donorData.taxCertificates.forEach(cert => {
