<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #2e8b57;
      --primary-light: #3cb371;
      --secondary: #1e6f44;
      --accent: #ff8c00;
      --dark: #1a3e2c;
      --light: #f0fff5;
      --gray: #6c757d;
      --light-gray: #f8f9fa;
    }
    
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f8fff8;
      color: var(--dark);
      line-height: 1.6;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
    }
    
    .campaign-header {
      background-size: cover;
      background-position: center;
      color: white;
      padding: 120px 0 80px;
      margin-bottom: 40px;
      position: relative;
    }
    
    .campaign-title {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
    }
    
    .campaign-org {
      font-size: 1.2rem;
      opacity: 0.9;
      margin-bottom: 1.5rem;
    }
    
    .category-badge {
      display: inline-block;
      background-color: var(--accent);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .campaign-card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      padding: 30px;
      margin-bottom: 30px;
    }
    
    .campaign-image {
      width: 100%;
      border-radius: 8px;
      margin-bottom: 25px;
      max-height: 500px;
      object-fit: cover;
    }
    
    .section-title {
      color: var(--primary);
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
      position: relative;
      padding-bottom: 10px;
    }
    
    .section-title:after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 60px;
      height: 3px;
      background: var(--accent);
    }
    
    .campaign-description {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #444;
    }
    
    .campaign-stats {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin: 30px 0;
    }
    
    .stat-item {
      text-align: center;
      padding: 15px;
      flex: 1;
      min-width: 120px;
    }
    
    .stat-value {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary);
    }
    
    .stat-label {
      font-size: 0.9rem;
      color: var(--gray);
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .progress {
      height: 10px;
      border-radius: 5px;
      margin: 25px 0;
      background-color: #e9ecef;
    }
    
    .progress-bar {
      background-color: var(--primary);
      border-radius: 5px;
    }
    
    .donate-btn {
      background-color: var(--accent);
      color: white;
      border: none;
      padding: 12px;
      font-size: 1.1rem;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s ease;
      margin-top: 10px;
    }
    
    .donate-btn:hover {
      background-color: #e67e00;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 140, 0, 0.3);
    }
    
    .form-control {
      padding: 12px 15px;
      border-radius: 8px;
      border: 1px solid #ddd;
      margin-bottom: 15px;
    }
    
    .form-control:focus {
      border-color: var(--primary-light);
      box-shadow: 0 0 0 0.25rem rgba(46, 139, 87, 0.25);
    }
    
    .update-item {
      padding: 20px;
      background: var(--light-gray);
      border-radius: 8px;
      margin-bottom: 20px;
    }
    
    .update-item h4 {
      color: var(--secondary);
      margin-bottom: 10px;
    }
    
    .social-share {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }
    
    .social-btn {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.1rem;
      transition: transform 0.3s;
    }
    
    .social-btn:hover {
      transform: translateY(-3px);
    }
    
    .fb { background-color: #3b5998; }
    .twitter { background-color: #1da1f2; }
    .linkedin { background-color: #0077b5; }
    .whatsapp { background-color: #25d366; }
    
    @media (max-width: 768px) {
      .campaign-title {
        font-size: 2rem;
      }
      
      .campaign-stats {
        flex-direction: column;
      }
      
      .stat-item {
        margin-bottom: 15px;
      }
    }
  </style>
</head>
<body>
  <!-- Campaign Header -->
  <div class="campaign-header text-center">
    <div class="campaign-header text-center">
      <div class="container">
        <h1 class="campaign-title">Explore Campaigns</h1>
        <p class="campaign-org">Support causes that matter to you</p>
      </div>
    </div>
    
    <div class="container py-5">
      <% if (campaigns && campaigns.length > 0) { %>
        <div class="row">
          <% campaigns.forEach(campaign => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card h-100 shadow-sm">
                <img src="<%= campaign.imageUrl || '/images/placeholder.jpg' %>" 
                     class="card-img-top" 
                     alt="<%= campaign.title %>" 
                     style="height: 200px; object-fit: cover;">
                
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= campaign.title %></h5>
                  <p class="card-text text-muted">By <%= campaign.ngoName || 'Unknown Organization' %></p>
                  <p class="card-text mb-3"><%= campaign.description.substring(0, 100) %>...</p>
    
                  <div class="mt-auto">
                    <p><strong>Goal:</strong> $<%= campaign.goalAmount.toLocaleString() %></p>
                    <p><strong>Raised:</strong> $<%= campaign.currentAmount.toLocaleString() %></p>
    
                    <a href="/campaign/<%= campaign._id %>" class="btn btn-outline-primary w-100 mt-2">View Campaign</a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <h3>No Campaigns Found</h3>
          <p class="text-muted">Check back later for new fundraising opportunities.</p>
        </div>
      <% } %>
    </div>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Quick donation amount buttons
    document.querySelectorAll('.amount-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.getElementById('amount').value = btn.dataset.amount;
      });
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
  </script>
</body>
</html>