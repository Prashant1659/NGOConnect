<%- include('partials/head') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #256f45;
      --primary-light: #2e8b57;
      --secondary: #1e5a3b;
      --accent: #ff7b00;
      --dark: #1a2e24;
      --light: #f5fff9;
      --gray: #5a6d66;
      --light-gray: #f0f7f3;
      --card-shadow: 0 12px 20px -10px rgba(34, 111, 74, 0.15);
    }
    
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f8fdfa;
      color: var(--dark);
      line-height: 1.6;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
    }
    
    .hero-section {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      color: white;
      padding: 100px 0 60px;
      margin-bottom: 40px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    .hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('data:image/svg+xml;base64,');
    }
    
    .page-title {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 1rem;
      position: relative;
      z-index: 1;
    }
    
    .page-subtitle {
      font-size: 1.2rem;
      opacity: 0.9;
      max-width: 700px;
      margin: 0 auto 2rem;
      position: relative;
      z-index: 1;
    }
    
    .search-container {
      max-width: 600px;
      margin: 0 auto 30px;
      position: relative;
      z-index: 1;
    }
    
    .campaign-card {
      background: white;
      border-radius: 12px;
      box-shadow: var(--card-shadow);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .campaign-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px -10px rgba(34, 111, 74, 0.2);
    }
    
    .card-img-top {
      height: 200px;
      object-fit: cover;
      width: 100%;
      border-bottom: 1px solid rgba(0,0,0,0.05);
    }
    
    .card-body {
      padding: 1.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .card-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
      color: var(--dark);
    }
    
    .card-text {
      color: var(--gray);
      margin-bottom: 1rem;
      flex-grow: 1;
    }
    
    .organization {
      font-size: 0.9rem;
      color: var(--primary);
      font-weight: 500;
      margin-bottom: 0.5rem;
    }
    
    .progress-container {
      margin: 1rem 0;
    }
    
    .progress-bar {
      height: 8px;
      background: var(--light-gray);
      border-radius: 4px;
      overflow: hidden;
    }
    
    .progress-fill {
      height: 100%;
      background: var(--primary);
      border-radius: 4px;
      transition: width 0.5s ease;
    }
    
    .funding-info {
      display: flex;
      justify-content: space-between;
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }
    
    .raised {
      font-weight: 600;
      color: var(--primary);
    }
    
    .goal {
      color: var(--gray);
    }
    
    .btn-view {
      background-color: var(--primary);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
      align-self: flex-start;
      margin-top: auto;
    }
    
    .btn-view:hover {
      background-color: var(--secondary);
      transform: translateY(-2px);
    }
    
    .empty-state {
      padding: 4rem 0;
      text-align: center;
    }
    
    .empty-icon {
      font-size: 4rem;
      color: var(--light-gray);
      margin-bottom: 1.5rem;
    }
    
    .empty-title {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      color: var(--dark);
    }
    
    .empty-text {
      color: var(--gray);
      max-width: 500px;
      margin: 0 auto;
    }
    
    .category-filter {
      margin-bottom: 2rem;
    }
    
    .category-btn {
      border: 1px solid var(--primary-light);
      color: var(--primary);
      background: white;
      border-radius: 20px;
      padding: 0.4rem 1.2rem;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
      transition: all 0.2s ease;
    }
    
    .category-btn:hover, .category-btn.active {
      background: var(--primary);
      color: white;
    }
    
    @media (max-width: 768px) {
      .page-title {
        font-size: 2.2rem;
      }
      
      .hero-section {
        padding: 80px 0 40px;
      }
      
      .card-img-top {
        height: 180px;
      }
    }
  </style>
</head>
<body>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <h1 class="page-title">Discover Meaningful Causes</h1>
      <p class="page-subtitle">Support campaigns that align with your values and make a real difference in people's lives</p>
      
      <div class="search-container">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search campaigns..." aria-label="Search campaigns">
          <button class="btn btn-light" type="button">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Campaign Listing -->
  <section class="campaign-listing py-4">
    <div class="container">
      <div class="row mb-4">
        <div class="col-12">
          <h2 class="h4 mb-3">Browse by category</h2>
          <div class="category-filter">
            <button class="btn category-btn active">All</button>
            <button class="btn category-btn">Education</button>
            <button class="btn category-btn">Healthcare</button>
            <button class="btn category-btn">Environment</button>
            <button class="btn category-btn">Animals</button>
            <button class="btn category-btn">Community</button>
            <button class="btn category-btn">Emergency</button>
          </div>
        </div>
      </div>
      
      <% if (campaigns && campaigns.length > 0) { %>
        <div class="row g-4">
          <% campaigns.forEach(campaign => { %>
            <div class="col-md-6 col-lg-4">
              <div class="campaign-card">
                <img src="<%= campaign.filePath || '/images/placeholder.jpg' %>" 
                     class="card-img-top" 
                     alt="<%= campaign.title %>">
                
                <div class="card-body">
                  <span class="badge bg-accent mb-2" style="background-color: var(--accent); color: white;">
                    <%= campaign.category || 'General' %>
                  </span>
                  <h3 class="card-title"><%= campaign.title %></h3>
                  <p class="organization">
                    <i class="fas fa-building me-1"></i> <%= campaign.ngoName || 'Nonprofit Organization' %>
                  </p>
                  <p class="card-text"><%= campaign.description.substring(0, 120) %>...</p>
                  
                  <div class="progress-container">
                    <div class="progress-bar">
                      <div class="progress-fill" style="width: <%= (campaign.currentAmount / campaign.goalAmount * 100) %>%"></div>
                    </div>
                  </div>
                  
                  <div class="funding-info">
                    <span class="raised">$<%= campaign.currentAmount.toLocaleString() %> raised</span>
                    <span class="goal">$<%= campaign.goalAmount.toLocaleString() %> goal</span>
                  </div>
                  
                  <a href="/campaign/<%= campaign._id %>" class="btn btn-view">
                    View Campaign <i class="fas fa-arrow-right ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">
            <i class="fas fa-heart"></i>
          </div>
          <h3 class="empty-title">No Campaigns Found</h3>
          <p class="empty-text">We couldn't find any campaigns matching your criteria. Check back later or try a different search.</p>
          <a href="/" class="btn btn-primary mt-3">
            <i class="fas fa-home me-1"></i> Return Home
          </a>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Category filter functionality
    document.querySelectorAll('.category-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelector('.category-btn.active').classList.remove('active');
        this.classList.add('active');
        // Here you would add logic to filter campaigns
      });
    });
    
    // Animation for cards on scroll
    const animateOnScroll = () => {
      const cards = document.querySelectorAll('.campaign-card');
      cards.forEach(card => {
        const cardPosition = card.getBoundingClientRect().top;
        const screenPosition = window.innerHeight / 1.3;
        
        if(cardPosition < screenPosition) {
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }
      });
    };
    
    // Initialize cards with opacity 0 for animation
    document.addEventListener('DOMContentLoaded', () => {
      const cards = document.querySelectorAll('.campaign-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = `opacity 0.5s ease ${index * 0.1}s, transform 0.5s ease ${index * 0.1}s`;
      });
      
      window.addEventListener('scroll', animateOnScroll);
      animateOnScroll(); // Run once on load
    });
  </script>
</body>
</html>