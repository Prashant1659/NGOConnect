<%- include('partials/head') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&family=Space+Grotesk:wght@500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #4361ee;
      --primary-light: #4895ef;
      --primary-dark: #3a0ca3;
      --secondary: #4cc9f0;
      --accent: #f72585;
      --dark: #14213d;
      --darker: #0a1128;
      --light: #f8f9fa;
      --gray: #6c757d;
      --light-gray: #e9ecef;
      --card-shadow: 0 2.8px 2.2px rgba(0, 0, 0, 0.02), 
                     0 6.7px 5.3px rgba(0, 0, 0, 0.028), 
                     0 12.5px 10px rgba(0, 0, 0, 0.035);
      --card-shadow-hover: 0 20px 25px -5px rgba(67, 97, 238, 0.1), 
                          0 10px 10px -5px rgba(67, 97, 238, 0.04);
    }
    
    body {
      font-family: 'Plus Jakarta Sans', sans-serif;
      background-color: var(--light);
      color: var(--dark);
      line-height: 1.6;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Space Grotesk', sans-serif;
      font-weight: 600;
      color: var(--darker);
    }
    
    .hero-section {
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
      color: white;
      padding: 140px 0 100px;
      margin-bottom: 60px;
      text-align: center;
      position: relative;
      overflow: hidden;
      clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
    }
    
    .hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%);
    }
    
    .page-title {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      position: relative;
      z-index: 1;
      background: linear-gradient(90deg, #fff 0%, rgba(255,255,255,0.8) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      line-height: 1.2;
    }
    
    .page-subtitle {
      font-size: 1.35rem;
      opacity: 0.9;
      max-width: 700px;
      margin: 0 auto 3rem;
      position: relative;
      z-index: 1;
      font-weight: 300;
    }
    
    .search-container {
      max-width: 700px;
      margin: 0 auto 40px;
      position: relative;
      z-index: 1;
    }
    
    .search-container .form-control {
      padding: 1.25rem 1.75rem;
      border-radius: 50px;
      border: none;
      box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
      font-size: 1.1rem;
    }
    
    .search-container .btn {
      position: absolute;
      right: 6px;
      top: 6px;
      bottom: 6px;
      border-radius: 50px;
      padding: 0 2rem;
      background: var(--accent);
      color: white;
      border: none;
      transition: all 0.3s ease;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .search-container .btn:hover {
      background: var(--primary-dark);
      transform: translateY(-1px);
    }
    
    .campaign-card {
      background: white;
      border-radius: 16px;
      box-shadow: var(--card-shadow);
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      height: 100%;
      display: flex;
      flex-direction: column;
      border: none;
      position: relative;
    }
    
    .campaign-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.5) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
    }
    
    .campaign-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--card-shadow-hover);
    }
    
    .campaign-card:hover::before {
      opacity: 1;
    }
    
    .card-img-container {
      height: 240px;
      overflow: hidden;
      position: relative;
    }
    
    .card-img-top {
      height: 100%;
      width: 100%;
      object-fit: cover;
      transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .campaign-card:hover .card-img-top {
      transform: scale(1.08);
    }
    
    .card-body {
      padding: 2rem;
      flex: 1;
      display: flex;
      flex-direction: column;
      position: relative;
      z-index: 2;
      background: white;
    }
    
    .card-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--darker);
      line-height: 1.3;
    }
    
    .card-text {
      color: var(--gray);
      margin-bottom: 1.5rem;
      flex-grow: 1;
      font-size: 1rem;
    }
    
    .organization {
      display: flex;
      align-items: center;
      font-size: 0.95rem;
      color: var(--primary);
      font-weight: 600;
      margin-bottom: 1rem;
    }
    
    .organization i {
      margin-right: 10px;
      font-size: 0.9rem;
    }
    
    .progress-container {
      margin: 1.5rem 0;
    }
    
    .progress {
      height: 8px;
      border-radius: 4px;
      background-color: var(--light-gray);
      overflow: visible;
    }
    
    .progress-bar {
      background: linear-gradient(90deg, var(--primary) 0%, var(--secondary) 100%);
      border-radius: 4px;
      position: relative;
    }
    
    .progress-bar::after {
      content: '';
      position: absolute;
      right: -5px;
      top: -3px;
      width: 14px;
      height: 14px;
      background: white;
      border: 2px solid var(--primary);
      border-radius: 50%;
    }
    
    .funding-info {
      display: flex;
      justify-content: space-between;
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }
    
    .raised {
      font-weight: 700;
      color: var(--primary);
    }
    
    .goal {
      color: var(--gray);
      font-weight: 500;
    }
    
    .days-left {
      display: flex;
      align-items: center;
      color: var(--gray);
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }
    
    .days-left i {
      margin-right: 8px;
      color: var(--accent);
      font-size: 1rem;
    }
    
    .btn-view {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: white;
      border: none;
      padding: 0.85rem 2rem;
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s ease;
      align-self: flex-start;
      margin-top: auto;
      display: inline-flex;
      align-items: center;
      box-shadow: 0 4px 6px rgba(67, 97, 238, 0.1);
      position: relative;
      overflow: hidden;
    }
    
    .btn-view::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: 0.5s;
    }
    
    .btn-view:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(67, 97, 238, 0.2);
      color: white;
    }
    
    .btn-view:hover::before {
      left: 100%;
    }
    
    .btn-view i {
      margin-left: 8px;
      transition: transform 0.3s ease;
    }
    
    .btn-view:hover i {
      transform: translateX(5px);
    }
    
    .badge-category {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: var(--accent);
      color: white;
      font-weight: 600;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      z-index: 2;
    }
    
    .empty-state {
      padding: 6rem 0;
      text-align: center;
      background-color: white;
      border-radius: 16px;
      box-shadow: var(--card-shadow);
      margin: 3rem 0;
    }
    
    .empty-icon {
      font-size: 5rem;
      color: var(--light-gray);
      margin-bottom: 2rem;
      opacity: 0.7;
    }
    
    .empty-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      color: var(--darker);
    }
    
    .empty-text {
      color: var(--gray);
      max-width: 500px;
      margin: 0 auto 3rem;
      font-size: 1.15rem;
    }
    
    .category-filter {
      margin-bottom: 3rem;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
    }
    
    .category-btn {
      border: none;
      color: var(--gray);
      background: white;
      border-radius: 50px;
      padding: 0.75rem 2rem;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      box-shadow: var(--card-shadow);
      font-size: 0.95rem;
    }
    
    .category-btn:hover {
      color: var(--primary);
      transform: translateY(-3px);
      box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
    }
    
    .category-btn.active {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: white;
      box-shadow: 0 10px 15px -3px rgba(67, 97, 238, 0.3);
    }
    
    .section-title {
      position: relative;
      margin-bottom: 3rem;
      padding-bottom: 1rem;
      text-align: center;
      font-size: 2.5rem;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      bottom: 0;
      width: 80px;
      height: 5px;
      background: linear-gradient(90deg, var(--primary) 0%, var(--accent) 100%);
      border-radius: 3px;
    }
    
    .featured-badge {
      position: absolute;
      top: 20px;
      left: 20px;
      background: linear-gradient(135deg, var(--accent) 0%, #f75a8e 100%);
      color: white;
      padding: 0.5rem 1.25rem;
      border-radius: 50px;
      font-size: 0.8rem;
      font-weight: 700;
      z-index: 2;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .stats-container {
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
      border-radius: 16px;
      padding: 3rem 2rem;
      color: white;
      margin-bottom: 4rem;
      box-shadow: var(--card-shadow);
      position: relative;
      overflow: hidden;
    }
    
    .stats-container::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 100%;
      height: 200%;
      background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    }
    
    .stat-item {
      text-align: center;
      padding: 0 1.5rem;
      position: relative;
      z-index: 1;
    }
    
    .stat-number {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      background: linear-gradient(90deg, #fff 0%, rgba(255,255,255,0.8) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .stat-label {
      font-size: 1rem;
      opacity: 0.9;
      letter-spacing: 0.5px;
    }
    
    /* Modern pagination */
    .pagination .page-item .page-link {
      border: none;
      color: var(--gray);
      font-weight: 600;
      margin: 0 5px;
      border-radius: 10px;
      transition: all 0.3s ease;
    }
    
    .pagination .page-item.active .page-link {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: white;
      box-shadow: 0 4px 6px rgba(67, 97, 238, 0.1);
    }
    
    .pagination .page-item:not(.active) .page-link:hover {
      color: var(--primary);
      background: rgba(67, 97, 238, 0.1);
    }
    
    @media (max-width: 1200px) {
      .page-title {
        font-size: 3rem;
      }
      
      .section-title {
        font-size: 2.25rem;
      }
    }
    
    @media (max-width: 992px) {
      .hero-section {
        padding: 120px 0 80px;
        clip-path: polygon(0 0, 100% 0, 100% 95%, 0 100%);
      }
      
      .page-title {
        font-size: 2.5rem;
      }
      
      .card-img-container {
        height: 220px;
      }
      
      .section-title {
        font-size: 2rem;
      }
    }
    
    @media (max-width: 768px) {
      .hero-section {
        padding: 100px 0 60px;
        clip-path: polygon(0 0, 100% 0, 100% 97%, 0 100%);
      }
      
      .page-title {
        font-size: 2.25rem;
      }
      
      .page-subtitle {
        font-size: 1.15rem;
      }
      
      .stats-container {
        padding: 2.5rem 1.5rem;
      }
      
      .stat-item {
        margin-bottom: 2rem;
      }
      
      .stat-number {
        font-size: 2.5rem;
      }
      
      .section-title {
        font-size: 1.75rem;
      }
    }
    
    @media (max-width: 576px) {
      .hero-section {
        padding: 80px 0 50px;
      }
      
      .page-title {
        font-size: 2rem;
      }
      
      .search-container .form-control {
        padding: 1rem 1.25rem;
        font-size: 1rem;
      }
      
      .search-container .btn {
        padding: 0 1.5rem;
      }
      
      .category-btn {
        padding: 0.6rem 1.5rem;
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <h1 class="page-title">Empower Change Through Giving</h1>
      <p class="page-subtitle">Discover and support impactful campaigns that create real change in communities worldwide</p>
      
      <div class="search-container">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for causes, organizations, or keywords..." aria-label="Search campaigns">
          <button class="btn" type="button">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Campaign Listing -->
  <section class="campaign-listing py-5">
    <div class="container">
      <!-- Stats Section -->
      <div class="stats-container">
        <div class="row text-center">
          <div class="col-md-3 col-6 stat-item">
            <div class="stat-number">1,248+</div>
            <div class="stat-label">Campaigns Funded</div>
          </div>
          <div class="col-md-3 col-6 stat-item">
            <div class="stat-number">$3.2M+</div>
            <div class="stat-label">Raised</div>
          </div>
          <div class="col-md-3 col-6 stat-item">
            <div class="stat-number">56K+</div>
            <div class="stat-label">Donors</div>
          </div>
          <div class="col-md-3 col-6 stat-item">
            <div class="stat-number">142</div>
            <div class="stat-label">Nonprofits</div>
          </div>
        </div>
      </div>
      
      <div class="row mb-5">
        <div class="col-12">
          <h2 class="section-title">Browse Campaigns</h2>
          <div class="category-filter">
            <button class="btn category-btn active">All Causes</button>
            <button class="btn category-btn">Education</button>
            <button class="btn category-btn">Healthcare</button>
            <button class="btn category-btn">Environment</button>
            <button class="btn category-btn">Animals</button>
            <button class="btn category-btn">Poverty</button>
            <button class="btn category-btn">Arts & Culture</button>
            <button class="btn category-btn">Human Rights</button>
          </div>
        </div>
      </div>
      
      <% if (campaigns && campaigns.length > 0) { %>
        <div class="row g-4">
          <% campaigns.forEach((campaign, index) => { %>
            <div class="col-md-6 col-lg-4">
              <div class="campaign-card">
                <% if (index < 3) { %>
                  <span class="featured-badge">Featured</span>
                <% } %>
                <div class="card-img-container">
                  <img src="<%= campaign.imageUrl || '/images/placeholder.jpg' %>" 
                       class="card-img-top" 
                       alt="<%= campaign.title %>">
                  <span class="badge-category"><%= campaign.category || 'General' %></span>
                </div>
                
                <div class="card-body">
                  <h3 class="card-title"><%= campaign.title %></h3>
                  <p class="organization">
                    <i class="fas fa-building"></i> <%= campaign.ngoName || 'Nonprofit Organization' %>
                  </p>
                  <p class="card-text"><%= campaign.description.substring(0, 140) %>...</p>
                  
                  <div class="days-left">
                    <i class="fas fa-clock"></i> <%= Math.floor(Math.random() * 30) + 1 %> days left
                  </div>
                  
                  <div class="progress-container">
                    <div class="progress">
                      <div class="progress-bar" 
                           role="progressbar" 
                           style="width: <%= (campaign.currentAmount / campaign.goalAmount * 100) %>%" 
                           aria-valuenow="<%= campaign.currentAmount %>" 
                           aria-valuemin="0" 
                           aria-valuemax="<%= campaign.goalAmount %>">
                      </div>
                    </div>
                  </div>
                  
                  <div class="funding-info">
                    <span class="raised">$<%= campaign.currentAmount.toLocaleString() %> raised</span>
                    <span class="goal">$<%= campaign.goalAmount.toLocaleString() %> goal</span>
                  </div>
                  
                  <a href="/campaign/<%= campaign._id %>" class="btn btn-view">
                    Support Now <i class="fas fa-arrow-right"></i>
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        
        <!-- Pagination -->
        <nav aria-label="Campaign pagination" class="mt-5">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                <i class="fas fa-chevron-left"></i>
              </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#">
                <i class="fas fa-chevron-right"></i>
              </a>
            </li>
          </ul>
        </nav>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">
            <i class="fas fa-heart"></i>
          </div>
          <h3 class="empty-title">No Campaigns Found</h3>
          <p class="empty-text">We couldn't find any campaigns matching your criteria. Try adjusting your search or browse our popular categories.</p>
          <a href="/" class="btn btn-view">
            <i class="fas fa-home me-2"></i> Return Home
          </a>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Enhanced category filter functionality
    document.querySelectorAll('.category-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelector('.category-btn.active').classList.remove('active');
        this.classList.add('active');
        
        // Add smooth scroll to results
        document.querySelector('.campaign-listing').scrollIntoView({
          behavior: 'smooth'
        });
        
        // Here you would add AJAX filtering logic
      });
    });
    
    // Animate elements on scroll
    const animateElements = () => {
      const elements = document.querySelectorAll('.campaign-card, .stat-item');
      
      elements.forEach(el => {
        const elementPosition = el.getBoundingClientRect().top;
        const screenPosition = window.innerHeight / 1.2;
        
        if(elementPosition < screenPosition) {
          el.style.opacity = '1';
          el.style.transform = 'translateY(0)';
        }
      });
    };
    
    // Initialize animation states
    document.addEventListener('DOMContentLoaded', () => {
      // Campaign cards
      const cards = document.querySelectorAll('.campaign-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = `all 0.6s cubic-bezier(0.16, 1, 0.3, 1) ${index * 0.1}s`;
      });
      
      // Stats items
      const stats = document.querySelectorAll('.stat-item');
      stats.forEach((stat, index) => {
        stat.style.opacity = '0';
        stat.style.transform = 'translateY(30px)';
        stat.style.transition = `all 0.6s ease ${index * 0.15}s`;
      });
      
      // Trigger initial animation
      setTimeout(() => {
        animateElements();
      }, 300);
      
      // Add scroll event listener
      window.addEventListener('scroll', animateElements);
    });
    
    // Search functionality
    document.querySelector('.search-container .btn').addEventListener('click', function() {
      const searchTerm = document.querySelector('.search-container input').value;
      if(searchTerm.trim() !== '') {
        // Here you would implement search functionality
        console.log('Searching for:', searchTerm);
      }
    });
    
    // Allow search on Enter key
    document.querySelector('.search-container input').addEventListener('keypress', function(e) {
      if(e.key === 'Enter') {
        document.querySelector('.search-container .btn').click();
      }
    });
  </script>
</body>
</html>
<%- include('partials/footer') %>