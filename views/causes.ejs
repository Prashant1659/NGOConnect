<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #2e8b57;
      --primary-light: #3cb371;
      --secondary: #1e6f44;
      --accent: #ff8c00;
      --dark: #1a3e2c;
      --light: #f0fff5;
      --gray: #6c757d;
      --light-gray: #f8f9fa;
    }
    
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f8fff8;
      color: var(--dark);
      line-height: 1.6;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
    }
    
    .campaign-header {
      background-size: cover;
      background-position: center;
      color: white;
      padding: 120px 0 80px;
      margin-bottom: 40px;
      position: relative;
    }
    
    .campaign-title {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
    }
    
    .campaign-org {
      font-size: 1.2rem;
      opacity: 0.9;
      margin-bottom: 1.5rem;
    }
    
    .category-badge {
      display: inline-block;
      background-color: var(--accent);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .campaign-card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      padding: 30px;
      margin-bottom: 30px;
    }
    
    .campaign-image {
      width: 100%;
      border-radius: 8px;
      margin-bottom: 25px;
      max-height: 500px;
      object-fit: cover;
    }
    
    .section-title {
      color: var(--primary);
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
      position: relative;
      padding-bottom: 10px;
    }
    
    .section-title:after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 60px;
      height: 3px;
      background: var(--accent);
    }
    
    .campaign-description {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #444;
    }
    
    .campaign-stats {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin: 30px 0;
    }
    
    .stat-item {
      text-align: center;
      padding: 15px;
      flex: 1;
      min-width: 120px;
    }
    
    .stat-value {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary);
    }
    
    .stat-label {
      font-size: 0.9rem;
      color: var(--gray);
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .progress {
      height: 10px;
      border-radius: 5px;
      margin: 25px 0;
      background-color: #e9ecef;
    }
    
    .progress-bar {
      background-color: var(--primary);
      border-radius: 5px;
    }
    
    .donate-btn {
      background-color: var(--accent);
      color: white;
      border: none;
      padding: 12px;
      font-size: 1.1rem;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s ease;
      margin-top: 10px;
    }
    
    .donate-btn:hover {
      background-color: #e67e00;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 140, 0, 0.3);
    }
    
    .form-control {
      padding: 12px 15px;
      border-radius: 8px;
      border: 1px solid #ddd;
      margin-bottom: 15px;
    }
    
    .form-control:focus {
      border-color: var(--primary-light);
      box-shadow: 0 0 0 0.25rem rgba(46, 139, 87, 0.25);
    }
    
    .update-item {
      padding: 20px;
      background: var(--light-gray);
      border-radius: 8px;
      margin-bottom: 20px;
    }
    
    .update-item h4 {
      color: var(--secondary);
      margin-bottom: 10px;
    }
    
    .social-share {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }
    
    .social-btn {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.1rem;
      transition: transform 0.3s;
    }
    
    .social-btn:hover {
      transform: translateY(-3px);
    }
    
    .fb { background-color: #3b5998; }
    .twitter { background-color: #1da1f2; }
    .linkedin { background-color: #0077b5; }
    .whatsapp { background-color: #25d366; }
    
    @media (max-width: 768px) {
      .campaign-title {
        font-size: 2rem;
      }
      
      .campaign-stats {
        flex-direction: column;
      }
      
      .stat-item {
        margin-bottom: 15px;
      }
    }
  </style>
</head>
<body>
  <!-- Campaign Header -->
  <div class="campaign-header text-center">
    <div class="container">
      <% if (campaign) { %>
        <h1 class="campaign-title"><%= campaign.title %></h1>
        <p class="campaign-org">By <%= campaign.organization.name %></p>
        <span class="category-badge"><%= campaign.category %></span>
      <% } else { %>
        <h1 class="campaign-title">No Campaign Found</h1>
        <p class="campaign-org">The campaign you're looking for doesn't exist</p>
      <% } %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <!-- Main Campaign Content -->
      <div class="col-lg-8">
        <% if (campaign) { %>
          <div class="campaign-card">
            <img src="<%= campaign.imageUrl %>" alt="<%= campaign.title %>" class="campaign-image">
            
            <h2 class="section-title">Our Mission</h2>
            <div class="campaign-description">
              <%= campaign.description %>
            </div>
            
            <% if (campaign.impact) { %>
              <h2 class="section-title mt-5">Our Impact</h2>
              <div class="campaign-description">
                <%= campaign.impact %>
              </div>
            <% } %>
          </div>
          
          <div class="campaign-card">
            <h2 class="section-title">Funding Progress</h2>
            
            <div class="campaign-stats">
              <div class="stat-item">
                <div class="stat-value">$<%= campaign.amountRaised.toLocaleString() %></div>
                <div class="stat-label">Raised</div>
              </div>
              <div class="stat-item">
                <div class="stat-value">$<%= campaign.targetAmount.toLocaleString() %></div>
                <div class="stat-label">Goal</div>
              </div>
              <div class="stat-item">
                <div class="stat-value"><%= campaign.donors %></div>
                <div class="stat-label">Donors</div>
              </div>
              <div class="stat-item">
                <div class="stat-value"><%= campaign.daysLeft %></div>
                <div class="stat-label">Days Left</div>
              </div>
            </div>
            
            <div class="progress">
              <div class="progress-bar" 
                   style="width: <%= (campaign.amountRaised / campaign.targetAmount * 100) %>%;"
                   role="progressbar" 
                   aria-valuenow="<%= (campaign.amountRaised / campaign.targetAmount * 100) %>" 
                   aria-valuemin="0" 
                   aria-valuemax="100">
                <span class="visually-hidden"><%= (campaign.amountRaised / campaign.targetAmount * 100) %>% Complete</span>
              </div>
            </div>
            
            <p class="text-center text-muted mt-3">
              <i class="far fa-clock me-2"></i> Campaign ends on <%= new Date(campaign.endDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
            </p>
          </div>
        <% } %>
      </div>
      
      <!-- Donation Sidebar -->
      <div class="col-lg-4">
        <% if (campaign) { %>
          <div class="campaign-card sticky-top" style="top: 20px;">
            <h2 class="section-title">Support This Cause</h2>
            
            <form action="/donate" method="POST">
              <div class="mb-3">
                <label for="amount" class="form-label">Donation Amount ($)</label>
                <div class="btn-group d-flex mb-3" role="group">
                  <button type="button" class="btn btn-outline-primary amount-btn" data-amount="25">$25</button>
                  <button type="button" class="btn btn-outline-primary amount-btn" data-amount="50">$50</button>
                  <button type="button" class="btn btn-outline-primary amount-btn" data-amount="100">$100</button>
                  <button type="button" class="btn btn-outline-primary amount-btn" data-amount="250">$250</button>
                </div>
                <input type="number" class="form-control" id="amount" name="amount" min="1" required>
              </div>
              
              <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              
              <div class="mb-3">
                <label for="message" class="form-label">Message (Optional)</label>
                <textarea class="form-control" id="message" name="message" rows="3" placeholder="Add a message of support..."></textarea>
              </div>
              
              <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="anonymous" name="anonymous">
                <label class="form-check-label" for="anonymous">
                  Donate anonymously
                </label>
              </div>
              
              <input type="hidden" name="campaignId" value="<%= campaign._id %>">
              <button type="submit" class="donate-btn w-100">
                <i class="fas fa-heart me-2"></i> Donate Now
              </button>
            </form>
            
            <div class="social-share mt-4">
              <p class="mb-2">Share this campaign:</p>
              <a href="#" class="social-btn fb"><i class="fab fa-facebook-f"></i></a>
              <a href="#" class="social-btn twitter"><i class="fab fa-twitter"></i></a>
              <a href="#" class="social-btn linkedin"><i class="fab fa-linkedin-in"></i></a>
              <a href="#" class="social-btn whatsapp"><i class="fab fa-whatsapp"></i></a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Campaign Updates -->
    <% if (campaign) { %>
      <div class="campaign-card">
        <h2 class="section-title">Campaign Updates</h2>
        
        <% if (campaign.updates && campaign.updates.length > 0) { %>
          <% campaign.updates.forEach(update => { %>
            <div class="update-item">
              <h4><%= update.title %></h4>
              <p class="text-muted">
                <i class="far fa-calendar-alt me-2"></i>Posted on <%= new Date(update.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              </p>
              <p><%= update.content %></p>
              <% if (update.image) { %>
                <img src="<%= update.image %>" class="img-fluid rounded mt-3" style="max-height: 300px;">
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-center py-4">
            <i class="far fa-newspaper fa-3x text-muted mb-3"></i>
            <p class="text-muted">No updates yet. Check back later for progress reports!</p>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Quick donation amount buttons
    document.querySelectorAll('.amount-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.getElementById('amount').value = btn.dataset.amount;
      });
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
  </script>
</body>
</html>